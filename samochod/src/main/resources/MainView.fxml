<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>

<BorderPane prefHeight="600" prefWidth="1000" minHeight="500" minWidth="800" stylesheets="@style2000.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="po.CarSimulatorController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-color: linear-gradient(to right, #FFD700 0%, #FF69B4 100%); -fx-border-color: #FF00FF; -fx-border-width: 0 0 3px 0; -fx-border-style: ridge;">
            <Label text="WYBIERZ AUTO:" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #000080; -fx-effect: dropshadow(gaussian, #FFFF00, 2, 0.9, 1, 1);" />
            <ComboBox fx:id="carSelector" promptText="Wybierz auto..." prefWidth="200" />
            <Button fx:id="addCarButton" text="+ DODAJ" onAction="#handleAddCar" />
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">

            <VBox spacing="10" styleClass="left-panel" style="-fx-padding: 10;">

                <TitledPane collapsible="false" expanded="true" text="Samochód">
                    <VBox spacing="6">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>
                        
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Model:" />
                            <Label fx:id="carModelLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Nr rej.:" />
                            <Label fx:id="carRegistrationLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Waga:" />
                            <Label fx:id="carWeightLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Prędkość:" />
                            <Label fx:id="carSpeedLabel" text="0 km/h" />
                        </HBox>
                    </VBox>
                </TitledPane>

                <TitledPane collapsible="false" expanded="true" text="Skrzynia biegów">
                    <VBox spacing="6">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Nazwa:" />
                            <Label fx:id="gearboxNameLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Cena:" />
                            <Label fx:id="gearboxPriceLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Waga:" />
                            <Label fx:id="gearboxWeightLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Bieg:" />
                            <Label fx:id="gearboxGearLabel" text="N" />
                        </HBox>
                    </VBox>
                </TitledPane>

                <TitledPane collapsible="false" expanded="true" text="Silnik">
                    <VBox spacing="6">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Nazwa:" />
                            <Label fx:id="engineNameLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Cena:" />
                            <Label fx:id="enginePriceLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Waga:" />
                            <Label fx:id="engineWeightLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Obroty:" />
                            <Label fx:id="engineRpmLabel" text="0 RPM" />
                        </HBox>
                    </VBox>
                </TitledPane>

                <TitledPane collapsible="false" expanded="true" text="Sprzęgło">
                    <VBox spacing="6">
                        <padding>
                            <Insets bottom="8" left="8" right="8" top="8" />
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Nazwa:" />
                            <Label fx:id="clutchNameLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Cena:" />
                            <Label fx:id="clutchPriceLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Waga:" />
                            <Label fx:id="clutchWeightLabel" style="-fx-font-size: 11px;" text="---" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label prefWidth="100" style="-fx-font-weight: bold; -fx-font-size: 11px;" text="Stan:" />
                            <Label fx:id="clutchStateLabel" text="100%" />
                        </HBox>
                    </VBox>
                </TitledPane>


            </VBox>

            <BorderPane>

                <center>
                    <StackPane fx:id="visualizationArea">
                  <Arc fill="DODGERBLUE" length="270.0" radiusX="80.0" radiusY="30.0" startAngle="45.0" stroke="BLACK" strokeType="INSIDE" type="ROUND" />
                        
                    </StackPane>
                </center>
            <bottom>
               <ToolBar prefHeight="40.0" BorderPane.alignment="CENTER">
                 <items>
                     <Button fx:id="turnOnButton" mnemonicParsing="false" onAction="#handleWlacz" text="START" />
                     <Button fx:id="turnOffButton" mnemonicParsing="false" onAction="#handleWylacz" text="STOP" />
                   <Button fx:id="action1Button" mnemonicParsing="false" onAction="#handleZwiekszBieg" text="BIEG +" />
                     <Button fx:id="action2Button" mnemonicParsing="false" onAction="#handleZmniejszBieg" text="BIEG -" />
                     <RadioButton fx:id="modeRadioButton" mnemonicParsing="false" text="ENGINE" disable="true" />
                 </items>
               </ToolBar>
            </bottom>
                
            </BorderPane>

        </SplitPane>
    </center>

</BorderPane>
