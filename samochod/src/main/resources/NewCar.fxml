<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400" prefWidth="500" stylesheets="@style2000.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="po.NewCarController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 12; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1px 0;">
            <Label text="Nowy samochód" style="-fx-font-weight: 600; -fx-font-size: 14px;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

            <VBox spacing="8">
                <Label text="Model:" style="-fx-font-weight: 600;" />
                <TextField fx:id="modelField" promptText="np. BMW M3" />
            </VBox>

            <VBox spacing="8">
                <Label text="Nr rejestracyjny:" style="-fx-font-weight: 600;" />
                <TextField fx:id="registrationField" promptText="np. 123" />
            </VBox>

            <VBox spacing="8">
                <Label text="Prędkość max (km/h):" style="-fx-font-weight: 600;" />
                <TextField fx:id="maxSpeedField" promptText="np. 250" />
            </VBox>

            <VBox spacing="8">
                <Label text="Max RPM:" style="-fx-font-weight: 600;" />
                <TextField fx:id="maxRpmField" promptText="np. 8000" />
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px 0 0 0;">
            <Button fx:id="addButton" text="Dodaj" onAction="#handleAddCar" prefWidth="100" />
            <Button text="Anuluj" onAction="#handleCancel" prefWidth="100" />
        </HBox>
    </bottom>

</BorderPane>
